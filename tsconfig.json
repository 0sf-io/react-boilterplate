{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "api":["./src/api"],
      "api/*":["./src/api/*"],
      "assets": ["./src/assets"],
      "assets/*": ["./src/assets/*"],
      "components": ["./src/components"],
      "components/*": ["./src/components/*"],
      "contracts":["./src/contracts"],
      "contracts/*":["./src/contracts/*"],
      "factories":["./src/factories"],
      "factories/*":["./src/factories/*"],
      "layouts": ["./src/layouts"],
      "layouts/*": ["./src/layouts/*"],
      "middlewares": ["./src/middlewares"],
      "middlewares/*": ["./src/middlewares/*"],
      "models": ["./src/models"],
      "models/*": ["./src/models/*"],
      "react-head":["./src/packages/react-head"],
      "react-head/*":["./src/packages/react-head/*"],
      "pages": ["./src/pages"],
      "pages/*": ["./src/pages/*"],
      "providers":["./src/providers"],
      "providers/*":["./src/providers/*"],
      "utils": ["./src/utils"],
      "utils/*": ["./src/utils/*"]
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.prod.json" }],
}
